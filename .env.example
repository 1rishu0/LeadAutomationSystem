# Groq API Key (Get from https://console.groq.com)
GROQ_API_KEY=gsk_your_api_key_here

# Google Credentials (Service Account JSON files)
GOOGLE_SHEETS_CREDS_FILE=./credentials/sheets_creds.json
GOOGLE_CALENDAR_CREDS_FILE=./credentials/calendar_creds.json

# Spreadsheet Configuration
SPREADSHEET_NAME=Lead Tracker
CALENDAR_ID=your-service-account@your-project.iam.gserviceaccount.com
TIMEZONE=Asia/Kolkata

# Discord Webhook (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Gmail Configuration (Optional)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password

# Server Configuration
PORT=5000
FLASK_ENV=production
